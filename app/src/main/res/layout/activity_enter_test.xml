<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearTest"
    tools:context="com.example.nooran.a2100695733.EnterTestActivity"
    style="@style/Padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/addTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="buttonClickHandler"
        android:text="Add"
        style="@style/MyButton"/>
    <LinearLayout style="@style/Padding"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Test" />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblTestType"
                    android:text="Test Type"

                    />

                <EditText
                    android:id="@+id/testType"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblPatient"
                    android:text="Patient"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
                <Spinner
                    android:id="@+id/patientSpinner"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1">

                </Spinner>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblBPL"
                    android:text="BPL"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

                <EditText
                    android:id="@+id/bpl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:inputType="number" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblBPH"
                    android:text="BPH"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    />

                <EditText
                    android:id="@+id/bph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblTemperature"
                    android:text="Temperature"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

                <EditText
                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblRedBlood"
                    android:text="Red Blood Count"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

                <EditText
                    android:id="@+id/redBlood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblWhiteBlood"
                    android:text="White Blood Count"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

                <EditText
                    android:id="@+id/whiteBlood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblHemoglobin"
                    android:text="Hemoglobin"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

                <EditText
                    android:id="@+id/hemoglobin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblComment"
                    android:text="Comment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />

                <EditText
                    android:id="@+id/comment"
                    android:text=""
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</RelativeLayout>


