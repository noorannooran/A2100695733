<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearContainer"
    tools:context="com.example.nooran.a2100695733.EnterPatientActivity"
    style="@style/Padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            style="@style/MyText.Large.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Enter Patient" />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblFirstName"
                    android:text="First Name"
                    style="@style/MyText.Medium"
                    />

                <EditText
                    android:id="@+id/firstName"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblLastName"
                    android:text="Last Name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/MyText.Medium"
                    />

                <EditText
                    android:id="@+id/lastName"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblDepartment"
                    android:text="Department"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/MyText.Medium"
                    />

                <EditText
                    android:id="@+id/department"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/lblRoom"
                    android:text="Room"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/MyText.Medium"
                    />

                <EditText
                    android:id="@+id/room"
                    android:text=""
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblDoctor"
                    android:text="Doctor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    style="@style/MyText.Medium"
                    />
                <Spinner
                    android:id="@+id/doctorSpinner"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1">

                </Spinner>




            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addPatient"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonClickHandler"
        android:text="Add" />


</RelativeLayout>

